<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar" />
    
    <style name="ChannelItemRow" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>
    
    <style name="RssItemThumbnail" parent="@android:style/TextAppearance.Medium" >
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item> 
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="RssItemTitlePlaintext" parent="@android:style/TextAppearance.Medium" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    	<item name="android:textColor">@color/RssItemTitlePlaintextColor</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:text">RssItemTitlePlaintext</item>
    </style>
    <style name="RssItemDescription" parent="@android:style/TextAppearance.Small" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/RssItemDescriptionColor</item>
        <item name="android:maxLines">3</item>
        <item name="android:text">RssItemDescription</item>
    </style>
    <style name="RssItemPubdate" parent="@android:style/TextAppearance.Small" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/RssItemPubdateColor</item>
        <item name="android:text">RssItemPubdate</item>
    </style>

</resources>